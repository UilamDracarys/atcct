<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fir_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context="com.scbpfsdgis.atcct.FIRDetails">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout

            android:id="@+id/firLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvFarmCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#b9f6ca"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFldNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Field No./Name"
                android:inputType="textPersonName|textCapWords" />

            <EditText
                android:id="@+id/etRFRArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="RFR Area"
                android:inputType="numberDecimal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:text="Obstructions"
                android:textColor="#424242"
                android:textStyle="italic" />

            <com.guna.libmultispinner.MultiSelectionSpinner
                android:id="@+id/spnObstructions"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10" />

            <Spinner
                android:id="@+id/spnHarvMeth"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:entries="@array/harvMeth" />

            <EditText
                android:id="@+id/etFlags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="No. of Flags"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="Start Time"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnSelStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="End Time"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnSelEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select" />

            </LinearLayout>

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Notes"
                android:inputType="textLongMessage" />

            <EditText
                android:id="@+id/etCoor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Field Coordinator"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b9f6ca"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="ADDITIONAL DETAILS"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/chkDayOp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Day Operation Only?"
                android:padding="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:text="RFR Available Until"
                android:textColor="#424242"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etRFRAvail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="Date"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnSelRFRAvail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etRFRAvailTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:hint="Time"
                    android:inputType="text" />

                <Button
                    android:id="@+id/btnSelRFRAvailTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select" />

            </LinearLayout>

            <Spinner
                android:id="@+id/spnPostHarv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:entries="@array/postHarvPlan" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b9f6ca"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="CONTACT PERSON"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/etContName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/etContNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Mobile No."
                android:inputType="text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b9f6ca"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="MAP"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSelImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Image..." />

            <ImageView
                android:id="@+id/imgMap"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#bdbdbd"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/attHeader"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#b9f6ca"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="ATTACHMENTS"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/attachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--<Button

                android:id="@+id/btnAddAtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Attachment..." />-->

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Attachments"
                android:visibility="gone"/>



        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabAddAtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/ic_attach"
            android:theme="@style/ThemeOverlay.AppCompat" />
    </FrameLayout>
</RelativeLayout>
